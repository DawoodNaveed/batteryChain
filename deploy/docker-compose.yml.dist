version: '2'
services:
  bc_db:
    environment:
      MYSQL_ROOT_PASSWORD: ${DATABASE_PASSWORD}
      MYSQL_DATABASE: ${DATABASE_NAME}
      MYSQL_USER: ${DATABASE_USER}
    image: mysql:${DATABASE_VERSION}
    ports:
      - "3306:3306/tcp"
    volumes:
      - bc_db:/var/lib/mysql
    container_name: ${DATABASE_HOST}
  bc_web:
    environment:
      PUID: 1000 # How to check UID : execute on host machine `id -u ${whoami}`
      PGID: 1000 # How to check UID : execute on host machine `id -g ${whoami}`
      ERRORS: 1
      APP_ENV: ${APP_ENV}
      APP_SECRET: ${APP_SECRET}
      DATABASE_URL: mysql://${DATABASE_USER}:${DATABASE_PASSWORD}@mp_mysql:3306/${DATABASE_NAME}
      DATABASE_VERSION: ${DATABASE_VERSION}
      MAILER_URL: ${MAILER_URL}
      SENDER_NAME: ${SENDER_NAME}
      SERVER_URL: ${SERVER_URL}
      DATABASE_VERSION: ${DATABASE_VERSION}

    build:
      context: ../
      dockerfile: deploy/Dockerfile
    ports:
      - "6000:80/tcp"
    volumes:
      - ../:/var/www/html
    links:
      - bc_db
    depends_on:
      - bc_db
    restart: on-failure:2
    container_name: bc_web
volumes:
  bc_db:
