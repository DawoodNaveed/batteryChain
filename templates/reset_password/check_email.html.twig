{% extends 'base.html.twig' %}

{% block title %}{{ "Password Reset Email Sent" | trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="mt-5">
                <div class="p-3 border card-body cardbody-color p-lg-5">
                    <div class="text-center">
                        <img src="{{ asset('resources/logo.png') }}" class="img-fluid profile-image-pic img-thumbnail my-3"
                             width="150px" alt="profile">
                    </div>
                    <div class="alert alert-success">
                        <p>
                            If an account matching your email exists, then an email was just sent that contains a link that you can use to reset your password.
                            This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.
                        </p>
                    </div>
                    <div class="alert alert-info">
                        <p>If you don't receive an email please check your spam folder or <a href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
