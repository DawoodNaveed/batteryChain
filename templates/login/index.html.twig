{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <body class="bg-light d-flex flex-column min-vh-100">
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="{{ asset('resources/logo.ico') }}" alt="" width="72" height="72">
            <h2>{{ "Battery Chain" | trans }}</h2>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div>
                    <form class="card-body" action="{{ path('app_login') }}" method="post">
                        {% set bg_input = '' %}
                        {% if error is defined and error %}
                            {% set bg_input = 'border-danger' %}
                            <div class="mb-1">
                                <label class="text-left text-danger small">
                                    {{ "*" }} {{ error | trans }}
                                </label>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <input type="text" class="form-control border {{ bg_input }}" id="username" name="_username" aria-describedby="emailHelp"
                                   placeholder="Username" value="{{ last_username }}">
                        </div>
                        <div class="mb-3">
                            <input type="password" id="password" name="_password" class="form-control border {{ bg_input }}" placeholder="Password" />
                        </div>
                        <div class="mb-3">
                            {# If you want to control the URL the user is redirected to on success #}
                            <input type="hidden" name="_target_path" class="form-control" value="{{ path('home') }}" />
                        </div>
                        <div class="mb-3">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="mb-3">
                            <div class="g-recaptcha" data-sitekey="{{ gg_recaptcha_site_key }}"></div>
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-primary px-5 mb-2 w-100">Login</button></div>
                        <small>
                            <a href="{{ path('app_forgot_password_request') }}" class="label label-primary">
                                {{ "Forgot Password?" | trans }}
                            </a>
                        </small>
                    </form>
                </div>
            </div>
        </div>
    </div>

    {% include 'footer.html.twig' %}

    </body>
{% endblock %}