{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('resources/css/style.css')}}" rel="stylesheet">
{% endblock %}

{% block body %}
    {% if error %}
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <p class="text-center text-white bg-danger mt-4">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </p>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h3 class="text-center text-dark mt-5">{{ "Battery Chain" }}</h3>
                <div class="card my-3">
                    <form class="card-body cardbody-color p-lg-5" action="{{ path('login') }}" method="post">
                        <div class="text-center">
                            <img src="{{ asset('resources/logo.ico') }}" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="150px" alt="profile">
                        </div>

                        <div class="mb-3">
                            <input type="text" class="form-control" id="username" name="_username" aria-describedby="emailHelp"
                                   placeholder="Username" value="{{ last_username }}">
                        </div>
                        <div class="mb-3">
                            <input type="password" id="password" name="_password" class="form-control" placeholder="password" />
                        </div>
                        <div class="mb-3">
                            {# If you want to control the URL the user is redirected to on success #}
                            <input type="hidden" name="_target_path" class="form-control" value="{{ path('home') }}" />
                        </div>
                        <div class="mb-3">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}