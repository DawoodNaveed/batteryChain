{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .row-div {
            display: flex;
            align-items: center;
            justify-content: right;
            height: 60px;
        }
        .heading {
            font-size: large;
            font-weight: normal;
        }
        .row-border-bottom {
            line-height: 2;
            border-bottom: 1px solid lightgray;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container p-tb-5 mb-5">
        <div class="row">
            <div class="col-md-10 offset-md-1">
                <div class="mt-5">
                    <div class="p-3 border card-body cardbody-color p-lg-5">
                        <div class="text-left">
                            <img src="{{ asset('resources/logo.ico') }}" class="img-fluid detail-page-logo img-thumbnail my-3"
                                 width="50px" alt="profile">
                            <h3 style="display: inline-block">
                                {{ "Battery Detail" }}
                            </h3>
                            <hr>
                        </div>
                        <div class="p-rl-12">
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Serial Number" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.serialNumber }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Manufacturer" | trans }}
                                    </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.manufacturer.name }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Status" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.status }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Type" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.batteryType.type }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Nominal Voltage" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.nominalVoltage }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Nominal Capacity" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.nominalCapacity }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Nominal Energy" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.nominalEnergy }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Cycle Life" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.cycleLife }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Height" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.height }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Width" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.width }}
                                    </span>
                                </div>
                            </div>
                            <div class="row p-0 row-border-bottom p-tb-5">
                                <div class="col-md-4 p-0">
                                    <span class="heading">
                                        {{ "Mass" | trans }}
                                     </span>
                                </div>
                                <div class="col-md-8">
                                    <span class="float-right">
                                        {{ battery.mass }}
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row-div">
                            <a class="mt-10 btn btn-primary mr-5" href="{{ path('download', {"slug": battery.serialNumber}) }}" target="_blank"> {{ "Download" | trans }}</a>
                            <a class="mt-10 btn btn-light" href="{{ path('homepage') }}"> {{ "Back" | trans }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}