{% extends 'layout.html.twig' %}

{% block sonata_breadcrumb %}
    <div class="hidden-xs">
        <ol class="nav navbar-top-links breadcrumb">
            <li>
                <a href="/admin">
                    <i class="fa fa-home"></i>
                </a>
            </li>
            <li class="active">
                <span>{{ "Bulk Update" }}</span>
            </li>
        </ol>
    </div>
{% endblock sonata_breadcrumb %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .alert-light {
            background-color: #d1ecf1;
        }
        .sample-csv {
            text-decoration: none !important;
            text-underline: none !important;
        }
    </style>
{% endblock %}

{% block sonata_admin_content %}
    <div class="alert alert-light">
        <span>
            <i class="fa fa-info-circle margin-r-5"></i>
            {{ "You can download sample csv file and view which headers to be used." | trans }}
        </span>
        <a href="{{ asset('resources/csv/bulk_update_recycler_sample.csv') }}" target="_blank"
           class="sample-csv font-light label label-success">
                {{ " Sample CSV" | trans }}
        </a>
    </div>
    {{ form(form) }}
{% endblock %}